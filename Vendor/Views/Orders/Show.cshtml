@{
  Layout = "_Layout";
}

@using BakeryVendor.Models;

<h1>Order Details: </h1>



@if (@Model.Count == 0)
{
  <h3>No Orders have been added yet!</h3>
} 

<h2>@Model["order"].Description costs @Model["order"].Price Dollars</h2>
<h3>From Vendor: @Model["vendor"].VendorName</h3>

<a href='/vendors/@Model["vendor"].Id/orders/new'>Add another order</a>
<a href='/vendors'>View all lit Vendors</a>

<form action="/orders/delete" method="post">
  <button type='submit' name='button'>Delete This Order</button>
</form>